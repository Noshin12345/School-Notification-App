<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp">

        <ImageButton
            android:id="@+id/back_bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/arrow_back_24"/>
        <ImageButton
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_bu"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_lock_clock_24"
            android:layout_marginStart="8dp"/>


        <TextView
            android:id="@+id/title_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/subtitle_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tool"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/save_bu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_save_as_24"
            android:layout_marginEnd="16dp"/> <!-- Adjusted margin -->

        <Button
            android:id="@+id/add_stud"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=" [+] "
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/blue"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/> <!-- Adjusted margin -->
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
